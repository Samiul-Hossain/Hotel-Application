<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/v_flipper"
         />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="250dp"
        android:columnCount="2"
        android:rowCount="3">

        <Button
            android:id="@+id/Button"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Reservation"
            android:drawableTop="@drawable/ic_reservation_icon_29765" />

        <Button
            android:id="@+id/Button2"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Contact Us"
            android:drawableTop="@drawable/ic_contact_us_icon_dark" />
        <Button
            android:id="@+id/Button3"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Rates"
            android:drawableTop="@drawable/ic_ratess" />
        <Button
            android:id="@+id/Button4"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Facilities"
            android:drawableTop="@drawable/ic_facilities" />
        <Button
            android:id="@+id/Button5"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Gallery"
            android:drawableTop="@drawable/ic_galery" />
        <Button
            android:id="@+id/Button6"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="Location"
            android:drawableTop="@drawable/ic_loc" />
    </GridLayout>



</RelativeLayout>
</ScrollView>